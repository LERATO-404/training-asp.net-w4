
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-sm-8">
        <h1>User Profile</h1>
        <!-- User profile content goes here -->
        <div>
            <a href="~/AuthServices/UserManager/UserProfile" class="nav-link text-dark">Hello @TempData["FirstName"]?.ToString() @TempData["LastName"]?.ToString()</a>
        </div>
        
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
                Total Parcels
            </div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.ParcelsCount</h5>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Total Personnel
            </div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.PersonnelCount</h5>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Total Deliveries
            </div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.DeliveriesCount</h5>
            </div>
        </div>
    </div>
</div>


