<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Parcel Delivery Tracking</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/global.css asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adm-styles.css asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/man-styles.css" asp-append-version="true" />

     <script src="~/js/showPageSetter.js"></script>
     <script src="https://kit.fontawesome.com/5903e24044.js" crossorigin="anonymous"></script>
</head>
<body>

    <div id="man-header"></div>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div id="man-footer"></div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5903e24044.js" crossorigin="anonymous"></script>
    <script>
        const linksForLandingPage = [
            { text: 'Personnel', url: '/Manager/ManagerPersonnel/Index' },
            { text: 'Deliveries', url: '/Manager/ManagerDeliveries/Index' },
            { text: 'Profile', url: '/AuthServices/UserManager/UserProfile' }
        ];
        const isLoggedIn = true;
        const landingPageHeader = createHeader(linksForLandingPage, isLoggedIn);
        const footer = createFooter();

        document.getElementById("man-header").appendChild(landingPageHeader);
        document.getElementById('man-footer').appendChild(footer);
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
