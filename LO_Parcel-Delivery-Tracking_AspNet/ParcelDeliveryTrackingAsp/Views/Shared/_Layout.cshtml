<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Parcel Delivery Tracking</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <!-- <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> -->
    <!--<link rel="stylesheet" href="~/ParcelDeliveryTrackingAsp.styles.css" asp-append-version="true" /> -->
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    


    <script src="~/js/showPageSetter.js"></script>
    <script src="https://kit.fontawesome.com/5903e24044.js" crossorigin="anonymous"></script>
</head>
<body>
   
    <div id="header-container"></div>

    @RenderBody()
  
    <footer>
        <div id="footer-container"></div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        signInAndBegin();
    </script>
    <script>
        const linksForLandingPage = [
            { text: 'Home', url: '/' },
            { text: 'About', url: '#' },
            { text: 'Services', url: '#' },
        ];
        const isLoggedIn = false;
        const landingPageHeader = createHeader(linksForLandingPage, isLoggedIn);
        const footer = createFooter();

        document.getElementById("header-container").appendChild(landingPageHeader);
        document.getElementById('footer-container').appendChild(footer);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
